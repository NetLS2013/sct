@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container-account-model">
    <div class="header-account-modal">
        <h2>@ViewData["Title"]</h2>
        <span>Enter your email.</span>
    </div>
    
    <div class="content-account-model">
        <section>
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label asp-for="Email" class="control-label-primary"></label>
                    <input asp-for="Email" class="form-control control-input-primary" />
                    <span asp-validation-for="Email" class="text-danger field-validation"></span>
                </div>
                
                <div asp-validation-summary="ModelOnly" class="text-danger field-validation"></div>
                
                <button type="submit" class="btn btn-submit btn-warning btn-outline btn-lg btn-block">Submit</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
