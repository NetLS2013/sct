@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset password";
}

<div class="container-account-model">
    <div class="header-account-modal">
        <h2>@ViewData["Title"]</h2>
        <span>Reset your password.</span>
    </div>
    
    <div class="content-account-model">
        <section>
            <form method="post">
                <input asp-for="Code" type="hidden"/>
                <div class="form-group">
                    <label asp-for="Email" class="control-label-primary"></label>
                    <input asp-for="Email" class="form-control control-input-primary"/>
                    <span asp-validation-for="Email" class="text-danger field-validation"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password" class="control-label-primary"></label>
                    <input asp-for="Password" class="form-control control-input-primary"/>
                    <span asp-validation-for="Password" class="text-danger field-validation"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label-primary"></label>
                    <input asp-for="ConfirmPassword" class="form-control control-input-primary"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger field-validation"></span>
                </div>
                
                <div asp-validation-summary="ModelOnly" class="text-danger field-validation"></div>
            
                <button type="submit" class="btn btn-submit btn-warning btn-outline btn-lg btn-block">Reset</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
