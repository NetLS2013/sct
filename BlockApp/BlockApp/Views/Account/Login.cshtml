@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-account-model">
    <div class="header-account-modal">
        <h2>@ViewData["Title"]</h2>
        <span>Use a local account to log in.</span>
    </div>
    
    <div class="content-account-model">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <label asp-for="Email" class="control-label-primary"></label>
                    <input asp-for="Email" class="form-control control-input-primary"/>
                    <span asp-validation-for="Email" class="text-danger field-validation"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label-primary"></label>
                    <input asp-for="Password" class="form-control control-input-primary"/>
                    <span asp-validation-for="Password" class="text-danger field-validation"></span>
                </div>

                <div class="form-group checkbox-formgroup">
                    <label class="container-checkbox text-color-minor">@Html.DisplayNameFor(m => m.RememberMe)
                        <input asp-for="RememberMe" type="checkbox">
                        <span class="checkmark"></span>
                    </label>
                </div>
                
                <div asp-validation-summary="ModelOnly" class="text-danger field-validation"></div>

                <button type="submit" class="btn btn-submit btn-warning btn-outline btn-lg btn-block">Login</button>

                <div class="row">
                    <span class="col-xs-12 col-sm-6 text-center">
                        <a asp-action="ForgotPassword" class="link-extra-small text-color-minor">Forgot your password?</a>
                    </span>

                    <span class="col-xs-12 col-sm-6 text-center">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="link-extra-small text-color-minor">Register as a new user?</a>
                    </span>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
